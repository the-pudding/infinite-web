<article>
	{{#each doc.content}}
	{{#if text}}
	<p>{{{text}}}</p>
	{{/if}}
	{{#if dropdown}}
	<select class='figure__dropdown'></select>
	{{/if}}
	{{#if graphic}}
	<figure class='figure__{{graphic}}' data-type={{{type}}}>
		<button class='btn figure__restart' data-type={{{type}}}>Replay <img inline src='refresh-ccw.svg'></button>
		{{#ifEquals type 'all'}}
		<button class='btn figure__correct'>Play Correct</button>
		{{/ifEquals}}
	</figure>
	{{/if}}

	{{#if odds }}
	{{> story/odds }}
	{{/if}}
	{{#if youtube}}
	{{> story/youtube }}
	{{/if}}
	{{#if hamlet}}
	{{> story/hamlet }}
	{{/if}}
	{{#if clock}}
	{{> story/clock }}
	{{/if}}
	{{#if results}}
	{{> story/results }}
	{{/if}}


	{{/each}}
</article>