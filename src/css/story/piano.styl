.figure__piano
	height 75vh

	.key
		stroke $off-black
		stroke-width 1px

		&__white
			fill rgba($gray-light, 0.5)

			&.active
				fill rgba($white, 1)

		&__black
			fill rgba($gray, 0.5)

			&.active
				fill rgba($off-black, 1)
		
		&__rest 
			fill transparent
			stroke none

	.guide
		stroke-width 1px
		stroke-dasharray 4
		stroke $off-black
		fill none

	.note
		fill $wrong

		&.is-correct
			fill $right