.figure__piano
	padding 0
	height 500px

	&[data-type='two']
		button
			display none

		.key.active
			cursor pointer

	.key
		stroke $off-black
		stroke-width 1px

		&__white
			fill $gray-light

			&.active
				fill $bg

		&__black
			fill $gray

			&.active
				fill $fg

		&__rest
			fill transparent
			stroke-dasharray 2px 2px

	.guide
		stroke-width 1px
		stroke-dasharray 4
		stroke $off-black
		fill none

	.note
		fill $wrong

		&.is-correct
			fill $right

	button
		padding 0.5em