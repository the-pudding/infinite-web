/* CUSTOM STORY STYLE */
body
	font-family $sans

article
	margin 3rem auto 0 auto
	padding 0 1rem
	max-width $column-width

	p
		margin 1rem auto

		+mq('bp-4')
			set-type-size(x-large, false)
			line-height 1.5

button
	padding 1rem
	border 1px solid $gray-light
	background-color $off-black
	color $white
	text-transform uppercase
	font-weight bold
	font-family $sans
	line-height 1

	svg
		width 1rem
		height 1rem