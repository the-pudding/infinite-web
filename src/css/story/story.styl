/* CUSTOM STORY STYLE */
body
	background-color $bg
	font-family $sans

mark
	padding 0.25em 0.5em
	background-color $highlight

main.is-ready #intro
	.choices
		opacity 1

	.loading
		display none

select
	font-weight bold
	font-family $sans
	set-type-size(small)
	display block
	margin 3rem auto 2rem auto

article
	margin 0 auto
	padding 1rem
	padding-top 4rem

	> *
		max-width $column-width

	p
		margin 1.5rem auto

		+mq('bp-4')
			set-type-size(x-large, false)
			line-height 1.5

.btn
	padding 0.75em
	background-color $fg
	color $bg
	font-weight bold
	font-size 1em
	font-family $sans
	line-height 1

	&:hover
		background-color $gray-dark

	&.figure__correct, &.figure__closest
		margin-left -0.625em
		background-color $right
		color $fg

		&:hover
			background-color lighten($right, 10)

	svg
		width 1em
		height 1em
		vertical-align top

figure
	margin 3rem auto
	padding 1rem
	border 2px solid $fg
	background-color $bg
	font-family $mono
	user-select none

.instruction
	margin 0 auto
	text-align center
	font-size 0.75em

.inline-audio
	margin-right 0.25em
	padding 0 0.25em
	background $fg
	color $bg
	font-weight bold
	cursor pointer

	svg
		display inline-block
		width 1em
		height 1em
		vertical-align middle
		transform translateY(-0.1em)

		path, polygon
			stroke $bg

.hidden-audio
	display none

.figure__overline
	set-type-size(small)
	position absolute
	top 0
	left 0
	visibility hidden
	margin 0
	width 100%
	text-align right
	font-family $sans
	line-height 1
	transform translateY(-132.5%)

	&.is-visible
		visibility visible

	button
		padding 0.5em
		background-color $gray-light
		color $off-black
		font-size 0.9em

		&:hover
			background-color $gray

.figure__stop
	visibility hidden
	height 1px

#method
	margin 0 auto
	padding 1rem

	> *
		max-width $column-width

	p
		margin 1.5rem auto
		set-type-size(small, false)

		&:first-of-type
			margin-bottom 3rem
			padding 1em
			background-color $highlight
			font-weight bold

		+mq('bp-4')
			set-type-size(large, false)
			line-height 1.5