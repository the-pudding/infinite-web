header
	position absolute
	top 0
	left 0
	z-index set-index('overlay')
	width 100%
	background-color $bg
	font-family $sans

	a.logo
		display block
		margin 1rem auto
		max-width 9rem
		border none

		svg
			display block
			width 100%
			fill $off-black

header.is-sticky
	position fixed
	display flex
	align-items center
	height 3rem
	background-color $bg
	box-shadow 0 0 7px 1px $gray-light
	transform translate3d(0, 0, 0)

	a.logo
		margin 0 auto

	.header__toggle
		position fixed
		top 0
		right 0
		z-index set-index(overlay)
		padding 0.75rem
		border none
		background-color transparent
		line-height 1
		cursor pointer
		transform translate3d(0, 0, 0)

		svg
			stroke $off-black

		span
			&:first-of-type
				display block

			&:last-of-type
				display none

		&.is-visible span
			&:first-of-type
				display none

			&:last-of-type
				display block

			svg
				stroke $off-white

	.header__menu
		position fixed
		top 0
		right 0
		z-index set-index(overlay)
		padding 1rem 1.5rem
		max-width 30rem
		width 100%
		height 100vh
		background-color $off-black
		color $off-white
		transition transform 200ms ease-in-out
		transform translateX(100%)

		+mq('bp-3')
			border-left 1px solid $gray-dark

		&.is-visible
			transform translateX(0)

		a
			border-bottom 1px solid $off-white
			color $off-white

			&:hover
				color $gray-light

		.menu__links
			display flex
			flex-direction row
			flex-wrap wrap

			+mq('bp-4')
				flex-direction column

			li
				margin-right 0.5em
				margin-bottom 0.5em
				text-transform uppercase
				font-weight 700
				font-family $sans-display
				set-type-size(large)

				+mq('bp-3')
					set-type-size(x-large)

		a.patreon-link
			padding 0.5em 0.75em
			border none
			background-color $off-white
			color $off-black
			text-transform uppercase
			font-weight 700
			font-family $sans-display

			&:hover
				opacity 0.75

	.menu__patrons
		ul
			display flex
			flex-wrap wrap

		li
			&:after
				display inline
				margin-right 0.25em
				content ','

			&:last-of-type:after
				content '.'

// dark color version
header.is-sticky.is-dark
	background-color $off-black
	box-shadow 0 0 7px 1px $gray-dark

	svg
		path
			fill $off-white

	.header__menu
		background-color $white
		color $off-black

		+mq('bp-3')
			border-left 1px solid $gray-light

	a
		border-bottom 1px solid $off-black
		color $off-black

		&:hover
			color $gray-dark

	.header__toggle
		svg
			stroke $off-white

		&.is-visible span
			svg
				stroke $off-black

.btn.audio
	position fixed
	top 0.325rem
	left 0.325rem
	margin 0
	padding 0.5em
	border-radius 50%
	line-height 1

	span
		display none

		&.is-visible
			display block