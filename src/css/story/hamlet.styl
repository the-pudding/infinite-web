
.figure__hamlet
	margin-top 0.5rem
	padding 0

	.inner
		position relative
		height 20rem

	.scroll
		overflow-y scroll
		height 20rem

		&:before
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 1.5rem
			background-image linear-gradient(to top, rgba($off-white, 0) 0, $off-white 67%, $off-white 100%)
			content ''

		&:after
			position absolute
			bottom 0
			left 0
			display block
			width 100%
			height 3rem
			background-image linear-gradient(to bottom, rgba($off-white, 0) 0, $off-white 67%, $off-white 100%)
			content ''

	p
		margin 0
		padding 1rem
		padding-bottom 3rem
		word-wrap break-word
		font-size 0.8em
		user-select none

		span
			visibility hidden