.figure__odds
	p, li
		font-size 0.8em

	ul
		display flex
		flex-direction column
		align-items center
		width 2em

		&:last-of-type
			width 4em

	p
		margin-top 0.5em

		+mq('bp-4')
			margin-top 1em

	li
		padding 0.5em
		text-align center

		+mq('bp-4')
			margin-bottom 0.5em

	span
		display inline-block
		width 1em

	.is-right
		background-color $right