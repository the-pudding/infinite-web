.figure__probability
	.figure__inner
		display flex
		flex-direction column
		align-items flex-start
		width 100%

		+mq('bp-4')
			flex-direction row

	button
		display none

	div
		padding 0 1rem
		width 100%

		&:first-of-type p
			margin-top 0

		+mq('bp-4')
			width 25%

	p, li
		margin 0
		margin-top 1rem
		font-size 0.8em

	span
		margin-left 0.5em
		font-size 0.8em

		+mq('bp-4')
			display block
			margin 0.5em 0

	ul
		display flex
		flex-wrap wrap
		align-items flex-start
		margin-top 1rem
		width 100%

	li
		margin-top -1px
		margin-left -1px
		width 0.75em
		height 0.75em
		border 1px solid $gray

		&:first-of-type
			background-color $right