// Breakpoints
// -------------------
$mq_vars = {
	bp-2: '(min-width: 20em)',
	bp-3: '(min-width: 30em)',
	bp-4: '(min-width: 40em)',
	bp-5: '(min-width: 50em)',
	bp-6: '(min-width: 60em)'
}
// -------------------
// Typefaces
// -------------------
$national = 'National 2 Web'
$national-narrow = 'National 2 Narrow Web'
$tiempos = 'Tiempos Text Web'
$tiempos-hed = 'Tiempos Headline Web'
$atlas = 'Atlas Grotesk Web'
$publico = 'Publico Text Web'
$sans-fb = Helvetica, Arial, sans-serif
$serif-fb = Georgia, Times, serif
$sans = $national, $sans-fb
$sans-display = $national-narrow, $sans-fb
$serif = $tiempos, $serif-fb
$serif-display = $tiempos-hed, $serif-fb
$mono = Menlo, Consolas, Monaco, 'Courier New', monospace
// z-index
$z-index = {
	bottom: -100,
	middle: 0,
	top: 100,
	overlay: 1000
}
// Color
$black = #000
$off-black = #282828
$gray-dark = #5b5b5b
